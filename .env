# Lumos Hub Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Configuration
VITE_APP_NAME=Lumos Hub
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Transform your study sessions with intelligent focus tools
VITE_BUILD_TIME=2025-09-01T16:50:00Z

# Environment
VITE_NODE_ENV=development
VITE_ENABLE_CONSOLE=true

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Authentication Providers
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GITHUB_CLIENT_ID=your-github-client-id

# API Configuration
VITE_API_BASE_URL=https://api.lumoshub.com
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PWA=true
VITE_ENABLE_OFFLINE_MODE=true

# Third-party Services
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
VITE_HOTJAR_ID=your-hotjar-id

# Development Configuration
VITE_DEV_SERVER_PORT=5173
VITE_PREVIEW_PORT=4173
VITE_DEV_HTTPS=false

# Storage Configuration
VITE_STORAGE_BUCKET=lumos-hub-storage
VITE_CDN_URL=https://cdn.lumoshub.com

# Notification Services
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key
VITE_PUSH_NOTIFICATION_ENDPOINT=https://api.lumoshub.com/notifications

# External APIs
VITE_YOUTUBE_API_KEY=your-youtube-api-key
VITE_SPOTIFY_CLIENT_ID=your-spotify-client-id

# Security
VITE_CSP_NONCE=random-nonce-value
VITE_ENCRYPTION_KEY=your-encryption-key

# Monitoring & Performance
VITE_PERFORMANCE_BUDGET_JS=500
VITE_PERFORMANCE_BUDGET_CSS=100
VITE_PERFORMANCE_BUDGET_IMAGES=1000

# Social Media
VITE_TWITTER_HANDLE=@lumoshub
VITE_FACEBOOK_APP_ID=your-facebook-app-id
VITE_DISCORD_INVITE=https://discord.gg/lumoshub

# Support
VITE_SUPPORT_EMAIL=support@lumoshub.com
VITE_SUPPORT_URL=https://help.lumoshub.com
VITE_FEEDBACK_URL=https://feedback.lumoshub.com
